<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/venueContainer2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/vendrobg"
    android:layout_marginHorizontal="10dp"
    tools:context=".UserInterface">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="All"
            android:id="@+id/all"
            android:paddingVertical="10dp"
            android:textSize="18dp"
            android:paddingHorizontal="20dp"
            android:textStyle="bold"
            android:background="@drawable/buttonall"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/all"
            android:background="@drawable/myrecipecolor"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Add Venues"
            android:textColor="#65000000"
            android:textSize="18dp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/addIconImageView1"
            android:layout_width="wrap_content"
            android:src="@drawable/addicon"
            android:padding="10dp"
            android:elevation="2dp"
            android:background="@drawable/myrecipecolor"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/venueContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginVertical="10dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</LinearLayout>